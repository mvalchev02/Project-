@model UniSpace.Data.Models.Specialty

<h2>Delete Specialty</h2>

<div>
    <h3>Are you sure you want to delete this specialty?</h3>
    <div>
        <h4>Specialty Details</h4>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Subjects</dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var subject in Model.MainSubjects)
                    {
                        <li>@subject.Name</li>
                    }
                </ul>
            </dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
