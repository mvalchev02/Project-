@model UniSpace.Data.Models.Specialty
@using UniSpace.Data.Models
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Edit Specialty</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Main Subjects</label>
        <div>
            @foreach (var subject in ViewBag.Subjects as List<Subject>)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="MainSubjects" value="@subject.Id"
                    @if (Model.MainSubjects != null && Model.MainSubjects.Any(s => s.Id == subject.Id))
                    {
                        @:checked
                    }>
                    <label class="form-check-label">@subject.Name</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
