@{
    ViewData["Title"] = "Създаване на потребител";
}

<h2>Създаване на потребител</h2>

<form asp-action="CreateUser" method="post">
    <div>
        <label for="userType">Тип потребител:</label>
        <select name="userType" required>
            <option value="Professor">Преподавател</option>
            <option value="Student">Студент</option>
        </select>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" name="email" required />
    </div>
    <div>
        <label for="password">Парола:</label>
        <input type="password" name="password" required />
    </div>
    <div>
        <label for="firstName">Име:</label>
        <input type="text" name="firstName" required />
    </div>
    <div>
        <label for="lastName">Фамилия:</label>
        <input type="text" name="lastName" required />
    </div>
    <div>
        <label for="phone">Телефон:</label>
        <input type="text" name="phone" required />
    </div>
    <div id="professorFields" style="display:none;">
        <!-- Полета за преподавател -->
        <p>Няма допълнителни полета за преподавател.</p>
    </div>
    <div id="studentFields" style="display:none;">
        <!-- Полета за студент -->
        <div>
            <label for="specialty">Специалност:</label>
            <input type="text" name="specialty" />
        </div>
        <div>
            <label for="course">Курс:</label>
            <select name="course">
                <option value="I">I</option>
                <option value="II">II</option>
                <option value="III">III</option>
                <option value="IV">IV</option>
            </select>
        </div>
    </div>
    <button type="submit">Създай</button>
</form>

<script>
    document.querySelector('[name="userType"]').addEventListener('change', function () {
        const studentFields = document.getElementById('studentFields');
        const professorFields = document.getElementById('professorFields');

        if (this.value === "Professor") {
            studentFields.style.display = 'none';
            professorFields.style.display = 'block';
        } else if (this.value === "Student") {
            professorFields.style.display = 'none';
            studentFields.style.display = 'block';
        } else {
            studentFields.style.display = 'none';
            professorFields.style.display = 'none';
        }
    });
</script>
