@model IEnumerable<UniSpace.Models.AddUserViewModel>

<h1>User List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Email" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Email" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
