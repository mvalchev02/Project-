@model IEnumerable<UniSpace.Data.Models.Room>

<h2>Rooms</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Room</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Capacity</th>
            <th>Equipment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Type</td>
                <td>@room.Capacity</td>
                <td>@room.Equipment</td>
                <td>
                    <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning">Edit</a>

                    <form asp-action="Delete" asp-route-id="@room.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
