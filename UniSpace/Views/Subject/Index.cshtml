@model IEnumerable<UniSpace.Data.Models.Subject>

<h2>Subjects</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Subject</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@subject.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
