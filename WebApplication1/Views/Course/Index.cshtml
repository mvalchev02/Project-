@model IEnumerable<WebApplication1.Data.Models.Course>

<h2>Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {

                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success">Add New Course</a>
}
