@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Изтриване на потребител";
}

<h2>Изтриване на потребител</h2>

<p>Сигурни ли сте, че искате да изтриете потребителя <strong>@Model.Email</strong>?</p>

<form asp-action="DeleteUserConfirmed" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
